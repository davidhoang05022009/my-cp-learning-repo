{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build active file (Debug)",
      "command": "/usr/lib64/ccache/g++",
      "args": [
        "-Wall",
        "-Wextra",
        "-Wshadow",
        "-D_GLIBCXX_ASSERTIONS",
        "-ggdb3",
        "-fmax-errors=2",
        "-fdiagnostics-color=always",
        "-mcmodel=medium",
        "${file}",
        "-o",
        "${fileDirname}/bin/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    },
    {
      "type": "cppbuild",
      "label": "C/C++: g++ build active file (Release)",
      "command": "/usr/lib64/ccache/g++",
      "args": [
        "-O2",
        "-fdiagnostics-color=always",
        "-mcmodel=medium",
        "${file}",
        "-o",
        "${fileDirname}/bin/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
  "version": "2.0.0"
}
